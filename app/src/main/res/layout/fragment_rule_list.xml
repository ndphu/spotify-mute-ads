<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:name="vn.com.kms.phudnguyen.autovolumemanager.listener.fragment.RuleFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="vn.com.phudnguyen.tools.autovolumemanager.listener.fragment.RuleFragment"
>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/fragment_rule"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:clickable="true"
            android:id="@+id/btn_add_rule"
            android:tint="@android:color/background_light"
            app:srcCompat="@android:drawable/ic_input_add"
            app:layout_constraintEnd_toEndOf="@+id/list"
            app:layout_constraintBottom_toBottomOf="parent"
            android:focusable="true"/>

</android.support.constraint.ConstraintLayout>
